<div id="<%= "#{dom_id(comment)}_private_comment_likes" %>", class="flex flex-row relative justify-between h-5 text-xs" >
  <% like_text = like_status ? 'Unlike' : 'Like' %>


  <div class="flex flex-row items-center justify-center rounded-lg hover:bg-gray-100 ml-2">
    <%= button_to like_text, like_comment_path(id: comment.id), class: "font-semi-bold" %>
  </div>


  <div class="inline-flex relative -top-2.5 rounded-2xl bg-gray-100 drop-shadow-lg p-0.5o border items-center mx-3">
    <%= image_tag 'like.png', class:"w-5 h-5" %>
    <span class="ml-1 font-semi-bold"><%= comment.likes.count %></span>
  </div>

</div>