<div class="flex flex-col w-2/3 h-20vh rounded-lg bg-white mt-4 p-4">
  <div class="flex flex-row h-1/2 w-full justify-center">
    <%= link_to profile_path(current_user.profile), method: :get do %>
      <%= image_tag 'cat.jpeg', class: 'w-16 h-16 rounded-full mt-3 transition ease-in-out delay-150 hover:-translate-y-1 hover:scale-110 duration-300' %>
    <% end %>

    <div class= "flex flex-row w-full rounded-lg bg-gray-50 border border-gray-300 m-4">
      <%= form_with(model: @post, url: 'root', method: 'get') do |f|%>

        <%= f.text_area :body, class: "flex w-full rounded-lg bg-gray-50 border border-gray-300 m-4" %>

        <%= f.hidden_field :author_id, value: current_user.id %>
        
        <%= f.submit "Send" %>
      <% end %>
    </div>
  </div>

  <div class="flex flex-row h-1/2 w-full border-t border-gray-200">
  
  </div>
</div>