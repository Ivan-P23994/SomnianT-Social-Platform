<div class="flex flex-col space-y-1 justify-center">
<h1 class = "place-self-center text-gray-900 font-light mb-3">People You May Know</h1>
  <% @user.not_friends?.limit(2).each do |u| %>
  <div class="flex flex-row h-24 justify-between">
    <div class="flex mr-4">
      <%= image_tag u.profile.avatar, class:' h-16 w-16 rounded-full border border-black-500' %>
    </div>
  
    <div class="flex flex-col">
      <span class="mb-2 text-sm text-gray-900 font-light px-4 self-center"><b><%= u.full_name %></b></span>
  
      <div class="flex flex-row justify-between w-2/3">
        <%= link_to friendship_befriend_path(:friend_id => u.id), method: :get do %>
          <div class= "w-4vw mr-2 text-white bg-gradient-to-r from-blue-500 via-blue-600 to-blue-700 hover:bg-gradient-to-br font-medium rounded-lg text-sm px-4 py-1 text-center">Add</div>
        <% end %>
        <%= link_to profile_path(current_user.profile), method: :get do %>
          <div class= "text-white w-4vw bg-gray-300 hover:bg-gradient-to-br font-medium rounded-lg text-sm px-3 py-1 items-center">Remove</div>
        <% end %>
      </div>
    </div>
  </div>
  <% end %>
</div>