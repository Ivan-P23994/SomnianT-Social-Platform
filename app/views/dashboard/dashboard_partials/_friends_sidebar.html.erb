<div class="flex flex-col space-y-2">
  <% @user.not_friends?.sample(3).each do |u| %>
  <div class="flex flex-row h-24 justify-between">
    <div class="flex ">
      <%= image_tag 'cat.jpeg', class:' h-24 w-24 rounded-full' %>
    </div>
  
    <div class="pl-4 flex flex-col justify-between w-80 ">
      <span class="mb-1 text-sm px-4 py-4"><b><%= u.full_name %></b></span>
  
      <div class="flex flex-row justify-around">
        <%= link_to friendship_befriend_path(:friend_id => u.id), method: :get do %>
          <div class= "w-6vw text-white bg-gradient-to-r from-blue-500 via-blue-600 to-blue-700 hover:bg-gradient-to-br font-medium rounded-lg text-sm px-4 py-1.5 text-center">Add</div>
        <% end %>
        <%= link_to profile_path(current_user.profile), method: :get do %>
          <div class= " text-white w-6vw bg-gray-300 hover:bg-gradient-to-br font-medium rounded-lg text-sm px-4 py-1.5 text-center">Remove</div>
        <% end %>
      </div>
    </div>
  </div>
  <% end %>
</div>