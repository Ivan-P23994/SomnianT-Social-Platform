<div class="flex flex-col justify-center space-y-2">
  <h1 class = "place-self-center text-gray-900 text-lg font-light">Contacts</h1>
  <% current_user.active_friends.sample(10).each do |u|%>
    <div class="flex flex-row justify-center mt-5">
      <%= link_to profile_path(u.profile) do %>
        <button type="button" class="inline-flex box-content relative items-end w-8 h-8 rounded-full hover:border-2 hover:border-blue-700">
          <%= image_tag u.profile.avatar, class:'w-8 h-8 absolute rounded-full'%>
          <span class="sr-only">Contact</span>
          <div class="inline-flex absolute -bottom-0 -right-0 justify-center items-center w-2 h-2 text-xs font-bold text-white bg-green-500 rounded-full border-white dark:border-gray-900"></div>
        </button>
      <% end %>
      <span class = "flex flex-row w-2/3 pl-4 text-gray-900 text-sm items-center"><%= u.full_name%></span>
    </div>
  <% end %>
</div>


