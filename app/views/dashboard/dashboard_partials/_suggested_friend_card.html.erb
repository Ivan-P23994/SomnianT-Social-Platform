<%= turbo_frame_tag "suggested_friend_#{friend.id}" do %>
  <div class="flex flex-row h-24 justify-between">
      <div class="flex mr-4">
        <%= image_tag friend.profile.avatar, class:' h-16 w-16 rounded-full border border-black-500' %>
      </div>
    
      <div class="flex flex-col">
        <span class="mb-2 text-sm text-gray-900 font-light px-4 self-center"><b><%= friend.full_name %></b></span>
    
        <div class="flex flex-row justify-between w-2/3">
          <%= link_to friendship_befriend_path(friend_id: friend.id, state: "accept", format: :turbo_stream) do %>
            <div class= "w-4vw mr-2 text-white bg-gradient-to-r from-blue-500 via-blue-600 to-blue-700 hover:bg-gradient-to-br font-light rounded-lg text-sm px-4 py-1 text-center">Add</div>
          <% end %>
          <%= link_to friendship_befriend_path(friend_id: friend.id, state: "decline", format: :turbo_stream) do %>
            <div class= "text-white w-4vw opacity-75 bg-gradient-to-r from-blue-900 to-amber-500 hover:bg-gradient-to-br font-light rounded-lg text-sm px-3 py-1 items-center">Remove</div>
          <% end %>
        </div>
      </div>
    </div>
<% end %>