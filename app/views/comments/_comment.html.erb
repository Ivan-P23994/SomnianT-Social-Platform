
<%= turbo_frame_tag "comment_#{comment.id}" do%>
<div id="<%= dom_id comment %>"<%= %> class="flex flex-row w-full h-auto justify-start">

  <%= link_to profile_path(comment.author.profile), class:"flex flex-col mr-2" do %>
    <%= image_tag 'cat.jpeg', class: 'w-10 h-10 rounded-full align-self-end' %>
  <% end %>

  <div class="flex flex-col w-full justify-start">
    <p class="text-xs mb-2">
      <%= comment.author.full_name %>
    </p>
    <p class= "flex flex-row w-full h-auto items-center rounded-2xl text-xs bg-gray-50 p-2 hover:bg-gray-100 border border-gray-300 hover:border-gray-400">
      <%= comment.body %>
    </p>
  </div>
  <% if current_user.id == comment.author.id %>
    <%= link_to 'Edit', edit_comment_path(comment), class: "rounded-lg h-10 w-15 bg-gray-100 inline-block font-medium" %>
    <%= button_to 'Delete', comment_path(comment), class: "rounded-lg h-10 w-15 bg-gray-100 inline-block font-medium", method: :delete %>
  <% end %>
</div>
<% end %>
