<div class="flex flex-col overflow-auto">
  <div class="flex flex-col w-1/5 min-w-[240px]">
    <%= render 'dashboard/dashboard_partials/side_navbar' %>
  </div>
  <div class = "flex flex-wrap w-80vw self-end h-full p-12 gap-8 overflow-auto">
    <% if @fr_requests.count == 0 %>
     <div class="flex flex-row w-full justify-center">
       <p class="text-2xl pt-40 justify-self-center text-gray-700">There are no friend requests at the moment</p>
     </div>
    <% end %>
    <% @fr_requests.each do |request|%>
      <%= render 'friendship/cards/friend_request_card', :r => request %>
    <% end %>
  </div>
</div>