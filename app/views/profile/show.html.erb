<div class="flex flex-row justify-start">
  <%= render 'application_partials/side_navbar' %>
  <div class="flex flex-col items-center w-full h-full space-y-10 border-2">
    <div class="flex flex-col justify-start items-center h-90vh w-1/3 pt-6">
  
      <div class="w-full bg-white rounded-lg border border-gray-200 shadow-md dark:bg-gray-800 dark:border-gray-700" >
        <div class="flex flex-col items-center pb-10">
          <%= image_tag "cat.jpeg", class: "flex flex-row drop-shadow-xl rounded-full h-24 w-24 ring-1 p-1 ring-gray-300 dark:ring-gray-500 animate-bounce" %>
          <h5 class="mb-1 text-xl font-medium text-gray-900 dark:text-white"><%= current_user.full_name %></h5>
          <span class="text-sm text-gray-500 dark:text-gray-400"><%= current_user.email %></span>
          <div class="flex mt-4 space-x-3 md:mt-6">
            <a href="#" class = "mx-4 text-white bg-gradient-to-r from-blue-500 via-blue-600 to-blue-700 hover:bg-gradient-to-br font-medium rounded-lg text-sm px-5 py-2.5 text-center">Discover People</a>
            <%= button_to "Edit Profile", edit_profile_path(@profile), method: :get, class: "mx-4 text-white bg-gradient-to-r from-blue-500 via-blue-600 to-blue-700 hover:bg-gradient-to-br font-medium rounded-lg text-sm px-5 py-2.5 text-center" %>            </div>
        </div>
      </div>
  
      <div class="flex flex-col items-center w-full mt-8 p-8 space-y-3 bg-white rounded-lg border border-gray-200 shadow-md dark:bg-gray-800 dark:border-gray-700 5">
        <div class="flex flex-row w-10/12 justify-between ">
          <p>Birthday</p>
          <%= @profile.birthday %>
        </div>
        <div class="flex flex-row w-10/12 justify-between ">
          <p>Hometown</p>
          <%= @profile.birth_place %>
        </div>
        <div class="flex flex-row w-10/12 justify-between ">
          <p>Gender</p>
          <%= @profile.gender.capitalize %>
        </div>
        <div class="flex flex-row w-10/12 justify-between ">
          <p>Occupation</p>
          <%= @profile.occupation %>
        </div>
      </div>
    </div>
  </div>
</div>